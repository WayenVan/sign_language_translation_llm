{
  "lspconfig": {
    "basedpyright": {
      "basedpyright.analysis.include": [
        "scripts/**",
        "model/**",
        "modules/**",
        "tests/**",
        "data/**"
      ],
      "basedpyright.analysis.exclude": [
        "**/node_modules/**",
        "**/__pycache__/**",
        "**/.venv/**",
        "**/.git/**",
        "**/.tox/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "dataset",
        "outputs"
      ],
      "basedpyright.analysis.typeCheckingMode": "off",
      "basedpyright.analysis.useLibraryCodeForTypes": false
    }
  }
}
